{
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-3.5-turbo"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_family": "FantasqueSansM Nerd Font",
  "buffer_font_family": "FantasqueSansM Nerd Font",
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "show_inline_completions": true,
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": true
  },
  "inlay_hints": {
    "enabled": true
  },
  // LSP
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Material"
  }
}
